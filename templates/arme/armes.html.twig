{% extends 'base.html.twig' %}

{% block title %} Armes {% endblock %}

{% block monTitre %} Arme {{ arme.name }} {% endblock %}

{% block body %}
    <div class="row">
        <div class="col-2">
            <img src="{{asset('images/armes/' ~ arme.name ~ '.png')}}" alt="">
        </div>
        <div class="col">
            <h2>{{ arme.name }}</h2>
            <h3> Description </h3>
            <ul>
                <li>{{arme.description}}</li>
                <li>Degats : {{arme.degats}}</li>
            </ul>
        </div>
    </div>
{% endblock %}